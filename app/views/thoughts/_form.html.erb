<%= form_for @thought do |f| %>
  <%= render 'shared/error_messages', object: @thought %>
  <fieldset class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </fieldset>
  <fieldset class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </fieldset>
  <fieldset class="form-group">
    <%= f.submit class: 'btn btn-primary'%>
  </fieldset>
<% end %>
