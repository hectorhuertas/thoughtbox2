<% if object.errors.any? %>
  <div class="bg-danger form-control">
    <h2><%= pluralize(object.errors.count, "error") %>:</h2>
    <ul class="list-group">
    <% object.errors.full_messages.each do |msg| %>
      <li class="list-group-item list-group-item-danger"><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <br>
<% end %>
